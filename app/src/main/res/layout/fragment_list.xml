<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    tools:context=".presentation.PersonListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_person_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_0"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="5"
        tools:listitem="@layout/item_person" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_2"
        app:dividerColor="#304FFE"
        app:layout_constraintBottom_toTopOf="@id/btn_option_1"
        app:layout_constraintTop_toBottomOf="@id/rv_person_list" />

    <Button
        android:id="@+id/btn_option_1"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="@dimen/dim_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_3"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/option_1"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_option_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_person_list"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/btn_option_2"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="@dimen/dim_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_3"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/option_2"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_option_3"
        app:layout_constraintStart_toEndOf="@id/btn_option_1"
        app:layout_constraintTop_toBottomOf="@id/rv_person_list"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/btn_option_3"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="@dimen/dim_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_3"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/option_3"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_option_2"
        app:layout_constraintTop_toBottomOf="@id/rv_person_list"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>